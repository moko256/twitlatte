<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/login"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/use_auth_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:layout_marginBottom="16dp"
        android:text="@string/use_auth_code"/>

    <Button
        android:id="@+id/start_twitter_auth_button"
        android:text="@string/twitter_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/use_auth_code"
        android:onClick="onStartTwitterAuthClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

    <Button
        android:id="@+id/start_mastodon_auth_button"
        android:text="@string/mastodon_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_twitter_auth_button"
        android:onClick="onStartMastodonAuthClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</RelativeLayout>