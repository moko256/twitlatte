<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/user_user_image"/>

    <TextView
        android:id="@+id/user_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_user_image"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="?android:textColorPrimary"
        tools:text="User name"/>

    <ImageView
        android:id="@+id/user_user_lock"
        app:srcCompat="@drawable/ic_lock_text_color_24dp"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/user_user_name"/>

    <TextView
        android:id="@+id/user_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_user_image"
        android:layout_below="@id/user_user_name"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="?android:textColorSecondary"
        tools:text="\@user_id"/>

</RelativeLayout>