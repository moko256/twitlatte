<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="tabStyle">@style/AppThemeActionbarTabTheme</item>

    </style>

    <style name="BaseTheme" parent="BaseAppTheme"/>

    <style name="AppTheme" parent="BaseTheme"/>
    <style name="AppTheme.NoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseSplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="SplashTheme" parent="BaseSplashTheme"/>

    <style name="MainActivityTheme" parent="AppTheme.NoActionBar"/>

    <style name="ShowTweetImageActivityActionBarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@null</item>
    </style>

    <style name="AppThemeActionbarTabTheme" parent="Widget.MaterialComponents.TabLayout.Colored" />

    <style name="ShowTweetImageActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ShowTweetImageActivityActionBarTheme</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="ExpandAndCloseToggleBackgroundColor">
        <item name="colorControlActivated">?attr/colorControlNormal</item>
    </style>
</resources>