<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/account">
        <ListPreference
            app:key="AccountKey"
            app:title="@string/account"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="@string/account"/>
        <Preference
            app:key="logout"
            app:title="@string/logout"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/application">
        <ListPreference
            app:key="nightModeType"
            app:defaultValue="@string/mode_night_no_value"
            app:title="@string/dark_theme"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="@string/dark_theme"
            app:entries="@array/choose_night_mode_entries"
            app:entryValues="@array/choose_night_mode_entries_value"/>
        <ListPreference
            app:key="timelineImageMode"
            app:defaultValue="normal"
            app:title="@string/load_timeline_image_mode"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="@string/load_timeline_image_mode"
            app:entries="@array/choose_timeline_image_load_entries"
            app:entryValues="@array/choose_timeline_image_load_entries_value"/>
        <SwitchPreferenceCompat
            app:key="useChromeCustomTab"
            app:defaultValue="true"
            app:title="@string/open_web_page_in_the_app"
            app:summaryOn="@string/viewing_web_page_in_app"
            app:summaryOff="@string/viewing_web_page_in_external_browser"/>
        <SwitchPreferenceCompat
            app:key="hideSensitiveMedia"
            app:defaultValue="true"
            app:title="@string/hide_sensitive_media"
            app:summaryOn="@string/hiding_sensitive_media"
            app:summaryOff="@string/showing_sensitive_media"/>
        <PreferenceScreen
            app:title="@string/regex_mute"
            app:key="regexMute">
            <SwitchPreferenceCompat
                app:key="patternTweetMuteEnabled"
                app:defaultValue="false"
                app:title="@string/use_post_regex_mute"/>
            <EditTextPreference
                app:key="tweetMutePattern"
                app:title="@string/post_mute_regex_pattern"
                app:dialogTitle="@string/edit_pattern"
                app:useSimpleSummaryProvider="true"
                app:dependency="patternTweetMuteEnabled"/>

            <SwitchPreferenceCompat
                app:key="patternTweetMuteShowOnlyImageEnabled"
                app:defaultValue="false"
                app:title="@string/use_post_regex_mute_show_only_image"/>
            <EditTextPreference
                app:key="tweetMuteShowOnlyImagePattern"
                app:title="@string/post_mute_regex_pattern_show_only_image"
                app:dialogTitle="@string/edit_pattern"
                app:useSimpleSummaryProvider="true"
                app:dependency="patternTweetMuteShowOnlyImageEnabled"/>

            <SwitchPreferenceCompat
                app:key="patternUserScreenNameMuteEnabled"
                app:defaultValue="false"
                app:title="@string/use_user_screen_name_regex_mute"/>
            <EditTextPreference
                app:key="userScreenNameMutePattern"
                app:title="@string/user_screen_name_mute_regex_pattern"
                app:dialogTitle="@string/edit_pattern"
                app:useSimpleSummaryProvider="true"
                app:dependency="patternUserScreenNameMuteEnabled"/>

            <SwitchPreferenceCompat
                app:key="patternUserNameMuteEnabled"
                app:defaultValue="false"
                app:title="@string/use_user_name_regex_mute"/>
            <EditTextPreference
                app:key="tweetUserNamePattern"
                app:title="@string/user_name_mute_regex_pattern"
                app:dialogTitle="@string/edit_pattern"
                app:useSimpleSummaryProvider="true"
                app:dependency="patternUserNameMuteEnabled"/>

            <SwitchPreferenceCompat
                app:key="patternTweetSourceMuteEnabled"
                app:defaultValue="false"
                app:title="@string/use_tweet_source_mute"/>
            <EditTextPreference
                app:key="tweetSourceMutePattern"
                app:title="@string/tweet_source_mute_regex_pattern"
                app:dialogTitle="@string/edit_pattern"
                app:useSimpleSummaryProvider="true"
                app:dependency="patternTweetSourceMuteEnabled"/>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/about">
        <Preference
            app:key="license_at_this_app"
            app:title="@string/license_at_this_app"
            app:summary="@string/apache_license_2_0"/>
        <PreferenceScreen
            app:key="license"
            app:title="@string/open_source_license">
            <Preference
                app:key="license_lib_support_v4"
                app:title="Android Compatibility Library v4"/>
            <Preference
                app:key="license_lib_support_v7"
                app:title="Android Compatibility Library v7"/>
            <Preference
                app:key="license_lib_support_design"
                app:title="Android Design Support Library"/>
            <Preference
                app:key="license_lib_support_custom_tabs"
                app:title="Android Custom Tabs Support Library"/>
            <Preference
                app:key="license_lib_support_arch"
                app:title="Android Architecture Components"/>
            <Preference
                app:key="license_lib_exo_player"
                app:title="ExoPlayer"/>
            <Preference
                app:key="license_lib_glide"
                app:title="Glide"/>
            <Preference
                app:key="license_lib_gson"
                app:title="google-gson"/>
            <Preference
                app:key="license_lib_photo_view"
                app:title="PhotoView"/>
            <Preference
                app:key="license_lib_fling_layout"
                app:title="FlingLayout"/>
            <Preference
                app:key="license_lib_japng"
                app:title="japng"/>
            <Preference
                app:key="license_lib_japng_android"
                app:title="japng_android"/>
            <Preference
                app:key="license_lib_kotlin"
                app:title="Kotlin Programming Language"/>
            <Preference
                app:key="license_lib_okhttp"
                app:title="OkHttp"/>
            <Preference
                app:key="license_lib_mastodon4j"
                app:title="mastodon4j"/>
            <Preference
                app:key="license_lib_twitter4j"
                app:title="Twitter4J"/>
            <Preference
                app:key="license_lib_twitter_text"
                app:title="twitter-text"/>
            <Preference
                app:key="license_lib_rx_java"
                app:title="RxJava"/>
            <Preference
                app:key="license_lib_rx_android"
                app:title="RxAndroid"/>
        </PreferenceScreen>
        <Preference
            app:key="source_code_link"
            app:title="@string/do_see_source_code"
            app:summary="@string/description_see_source_code" />
        <PreferenceScreen
            app:key="contributors"
            app:title="@string/contributors">
            <Preference
                app:key="moko256"
                app:title="moko256"/>
            <Preference
                app:key="jiro-aqua"
                app:title="jiro-aqua"/>
            <Preference
                app:key="Poussinou"
                app:title="Poussinou"/>
        </PreferenceScreen>
        <Preference
            app:key="app_version"
            app:title="@string/version_text"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>